{
  "metadata": [
    {
      "src": [
        {
          "files": ["**/*.csproj"],
          "src": "../src/ThomasonAlgorithm.Core",
          "exclude": ["**/bin/**", "**/obj/**"]
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net8.0",
        "Version": "1.0.0"
      }
    }
  ],
  "build": {
    "resource": [
      {
        "files": ["**/*.png", "**/*.svg", "**/*.jpg"],
        "src": "images",
        "dest": "images"
      },
      {
        "files": ["**/*.css", "**/*.js"],
        "src": "styles",
        "dest": "styles"
      },
      {
        "files": ["fonts/**"],
        "dest": "fonts"
      }
    ],
    "content": [
      {
        "files": ["api/**.yml", "api/index.md"]
      },
      {
        "files": ["index.md", "toc.yml", "articles/**.md", "articles/**/toc.yml"]
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_appTitle": "Thomason Algorithm Documentation",
      "_appFooter": "Â© 2025 MIPT",
      "_enableSearch": true,
      "_appLogoPath": "images/logo.png",
      "_basePath": "/Thomason_algorithm_lollipop",
      "_appFaviconPath": "images/favicon.ico"
    },
    "fileMetadata": {
      "**/api/**.yml": {
        "type": "API"
      }
    },
    "template": [
      "default",
      "templates/default"
    ],
    "sitemap": {
      "baseUrl": "https://your-github-username.github.io/Thomason_algorithm_lollipop/"
    },
    "api": {
      "basePath": "/Thomason_algorithm_lollipop/api"
    }
  }
}